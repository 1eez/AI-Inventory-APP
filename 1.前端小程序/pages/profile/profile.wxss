/* packageProfile/pages/profile/profile.wxss */

/* 页面容器 */
.page-container {
  min-height: 100vh;
  background: var(--background-color);
}

/* 导航栏 */
.nav-title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
}

/* 主容器 */
.container {
  padding: 30rpx;
  padding-top: 0;
}

/* 骨架屏样式 */
.skeleton-container {
  padding-top: 30rpx;
}

.skeleton-user-info {
  display: flex;
  align-items: center;
  padding: 40rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 24rpx;
  margin-bottom: 30rpx;
  backdrop-filter: blur(10rpx);
}

.skeleton-avatar-large {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 30rpx;
}



.skeleton-option-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background: #fff;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}

.skeleton-content {
  flex: 1;
  margin-left: 30rpx;
}

/* 用户信息卡片 */
.user-info-card {
  background: var(--card-background);
  border-radius: var(--border-radius-large);
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: var(--shadow-light);
}

.user-header {
  display: flex;
  align-items: center;
}

.user-avatar-container {
  margin-right: 30rpx;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4rpx solid var(--border-color);
}

.user-avatar-placeholder {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background: var(--background-color);
  display: flex;
  align-items: center;
  justify-content: center;
  border: 4rpx solid var(--border-color);
}

.user-avatar-placeholder text {
  font-size: 60rpx;
  color: var(--text-placeholder);
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 40rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 12rpx;
}

.user-name-placeholder {
  font-size: 40rpx;
  font-weight: 700;
  color: var(--text-secondary);
  margin-bottom: 12rpx;
}

.user-subtitle {
  font-size: 26rpx;
  color: var(--text-secondary);
}

.login-btn {
  color: var(--primary-color);
  background: var(--background-color);
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  font-weight: 600;
  border: 1rpx solid var(--primary-color);
}

.user-actions {
  color: var(--text-placeholder);
  font-size: 32rpx;
}

/* 卡片通用样式 */
.card {
  background: var(--card-background);
  border-radius: var(--border-radius-large);
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: var(--shadow-light);
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 30rpx;
}

.card-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.view-more {
  font-size: 26rpx;
  color: var(--primary-color);
  font-weight: 500;
}



/* 列表项通用样式 */
.list-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  transition: all 0.3s ease;
}

.list-item:last-child {
  border-bottom: none;
}

.list-item:active {
  background: #f8f9fa;
  margin: 0 -40rpx;
  padding-left: 40rpx;
  padding-right: 40rpx;
  border-radius: 16rpx;
}

.list-item-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

.list-item-icon text {
  font-size: 28rpx;
  color: #fff;
}

.list-item-content {
  flex: 1;
}

.list-item-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 6rpx;
}

.list-item-subtitle {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.list-item-arrow {
  font-size: 28rpx;
  color: var(--text-placeholder);
  margin-left: 16rpx;
}

