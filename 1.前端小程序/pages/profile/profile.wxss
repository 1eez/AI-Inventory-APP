/* 响应式设计 */
@media (max-width: 375px) {
  .user-header {
    flex-direction: column;
    text-align: center;
  }
  
  .user-avatar-container {
    margin-right: 0;
    margin-bottom: 20rpx;
  }
  
  .user-actions {
    display: none;
  }
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .page-container {
    background: #1a1a1a;
  }
  
  .card {
    background: #2d2d2d;
  }
  
  .card-title {
    color: #ffffff;
  }
  
  .user-info-card {
    background: #2d2d2d;
  }
  
  .user-name {
    color: #ffffff;
  }
  
  .user-name-placeholder {
    color: #a0a0a0;
  }
  
  .user-subtitle {
    color: #a0a0a0;
  }
  
  .list-item:active {
    background: #3a3a3a;
  }
  
  .list-item-title {
    color: #ffffff;
  }
  
  .list-item-subtitle {
    color: #a0a0a0;
  }
}