/* 响应式设计 */
@media (max-width: 375px) {
  .statistics-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 16rpx;
  }
  
  .stat-item {
    padding: 24rpx 16rpx;
  }
  
  .stat-number {
    font-size: 28rpx;
  }
  
  .stat-label {
    font-size: 22rpx;
  }
  
  .user-header {
    flex-direction: column;
    text-align: center;
  }
  
  .user-avatar-container {
    margin-right: 0;
    margin-bottom: 20rpx;
  }
  
  .user-actions {
    display: none;
  }
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .page-container {
    background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
  }
  
  .card {
    background: #2d3748;
  }
  
  .card-title {
    color: #fff;
  }
  
  .stat-item {
    background: linear-gradient(135deg, #4a5568 0%, #2d3748 100%);
  }
  
  .stat-item:active {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  }
  
  .stat-number {
    color: #fff;
  }
  
  .stat-label {
    color: #a0aec0;
  }
  
  .list-item:active {
    background: #4a5568;
  }
  
  .list-item-title {
    color: #fff;
  }
  
  .list-item-subtitle {
    color: #a0aec0;
  }
  
  .activity-title {
    color: #fff;
  }
  
  .activity-description {
    color: #a0aec0;
  }
  
  .activity-time {
    color: #718096;
  }
  
  .view-more {
    color: #64b5f6;
  }
}