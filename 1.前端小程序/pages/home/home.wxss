.bag-selector-modal {
  width: 100%;
  max-height: 80vh;
  border-radius: 24rpx 24rpx 0 0;
  animation: slideUp 0.3s ease;
}

.selector-bag-item {
  margin-bottom: 20rpx;
  transition: all 0.2s ease;
}

.selector-bag-item:active {
  transform: scale(0.98);
}

.selector-bag-card {
  display: flex;
