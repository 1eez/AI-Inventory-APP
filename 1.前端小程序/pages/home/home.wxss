/* pages/home/home.wxss */

/* 导航栏样式 */
.nav-title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.nav-right {
  display: flex;
  align-items: center;
}

.nav-icon {
  font-size: 40rpx;
  color: var(--text-primary);
  padding: 10rpx;
}

/* 骨架屏样式 */
.skeleton-container {
  padding: 20rpx 0;
}

.skeleton-item {
  margin-bottom: 30rpx;
}

.skeleton-box-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background: var(--card-background);
  border-radius: var(--border-radius);
  box-shadow: var(--shadow-light);
}

.skeleton-content {
  flex: 1;
  margin-left: 24rpx;
}

/* 统计卡片 */
.stats-card {
  padding: 40rpx 30rpx;
  margin-bottom: 30rpx;
}

.stats-content {
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.stat-number {
  font-size: 48rpx;
  font-weight: 700;
  color: var(--primary-color);
  line-height: 1.2;
}

.stat-label {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-top: 8rpx;
}

.stat-divider {
  width: 1rpx;
  height: 60rpx;
  background: var(--border-color);
  margin: 0 20rpx;
}

/* 快速操作 */
.quick-actions {
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.action-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 30rpx;
}

.action-buttons {
  display: flex;
  justify-content: space-around;
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.action-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 36rpx;
  margin-bottom: 16rpx;
  box-shadow: var(--shadow-light);
}

.action-text {
  font-size: 24rpx;
  color: var(--text-secondary);
  text-align: center;
}

/* 区域标题 */
.section-title {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 0 10rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.title-count {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-left: 8rpx;
}

/* 箱子网格布局 */
.boxes-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.box-item {
  padding: 30rpx;
  position: relative;
  transition: all 0.3s ease;
  border: 2rpx solid transparent;
}

.box-item:active {
  transform: scale(0.98);
  border-color: var(--primary-color);
}

/* 箱子头部 */
.box-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.box-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: var(--border-radius);
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 28rpx;
  box-shadow: var(--shadow-light);
}

.box-menu {
  padding: 8rpx;
  color: var(--text-placeholder);
  font-size: 24rpx;
}

/* 箱子内容 */
.box-content {
  margin-bottom: 20rpx;
}

.box-name {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 8rpx;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.box-description {
  font-size: 22rpx;
  color: var(--text-secondary);
  line-height: 1.5;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.box-stats {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.stat-badge {
  display: flex;
  align-items: center;
  background: rgba(18, 150, 219, 0.1);
  color: var(--primary-color);
  padding: 6rpx 12rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
}

.stat-badge .cuIcon-goods {
  font-size: 18rpx;
  margin-right: 6rpx;
}

.stat-text {
  font-size: 20rpx;
}

/* 箱子底部 */
.box-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.box-time {
  font-size: 20rpx;
  color: var(--text-placeholder);
}

.box-arrow {
  font-size: 20rpx;
  color: var(--text-placeholder);
}

/* 空状态优化 */
.empty-state {
  padding: 10rpx;
}

.empty-state .empty-icon {
  font-size: 160rpx;
  color: #e5e5e5;
  margin-bottom: 20rpx;
}

.empty-state .empty-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-secondary);
  margin-bottom: 20rpx;
}

.empty-state .empty-subtitle {
  font-size: 24rpx;
  color: var(--text-placeholder);
  line-height: 1.8;
  margin-bottom: 20rpx;
  white-space: pre-line;
}

/* 悬浮按钮优化 */
.btn-fab {
  position: fixed;
  bottom: 140rpx;
  right: 30rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, var(--secondary-color), #7ed321);
  color: white;
  font-size: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(57, 181, 74, 0.4);
  z-index: 999;
  transition: all 0.3s ease;
}

.btn-fab:active {
  transform: scale(0.9);
  box-shadow: 0 4rpx 12rpx rgba(57, 181, 74, 0.6);
}

/* 响应式适配 */
@media (max-width: 375px) {
  /* 保持箱子两列布局 */
  .boxes-grid {
    grid-template-columns: 1fr 1fr;
    gap: 16rpx;
  }
  
  .box-item {
    padding: 20rpx;
  }
  
  /* 保持快速操作按钮横向排列 */
  .action-buttons {
    display: flex;
    justify-content: space-around;
  }
  
  .action-btn {
    display: flex;
    flex-direction: column;
    align-items: center;
    flex: 1;
  }
  
  .action-icon {
    margin-bottom: 16rpx;
  }
  
  .action-text {
    font-size: 22rpx;
  }
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .skeleton {
    background: linear-gradient(90deg, #2a2a2a 25%, #3a3a3a 37%, #2a2a2a 63%);
  }
  
  .stat-divider {
    background: #3a3a3a;
  }
  
  .empty-state .empty-icon {
    color: #3a3a3a;
  }
}