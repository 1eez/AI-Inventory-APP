/* packageSearch/pages/search-result/search-result.wxss */

/* 页面容器 */
.page-container {
  min-height: 100vh;
  background: #f5f7fa;
}

/* 骨架屏样式 */
.skeleton-container {
  padding: 20rpx;
}

.skeleton-item {
  background: white;
  border-radius: 16rpx;
  padding: 25rpx;
  margin-bottom: 20rpx;
  display: flex;
  gap: 20rpx;
}

.skeleton-avatar {
  width: 120rpx;
  height: 120rpx;
  background: #f0f0f0;
  border-radius: 12rpx;
  animation: skeleton-loading 1.5s ease-in-out infinite;
}

.skeleton-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.skeleton-title {
  height: 32rpx;
  background: #f0f0f0;
  border-radius: 4rpx;
  width: 60%;
  animation: skeleton-loading 1.5s ease-in-out infinite;
}

.skeleton-desc {
  height: 24rpx;
  background: #f0f0f0;
  border-radius: 4rpx;
  width: 80%;
  animation: skeleton-loading 1.5s ease-in-out infinite;
}

.skeleton-meta {
  height: 20rpx;
  background: #f0f0f0;
  border-radius: 4rpx;
  width: 40%;
  animation: skeleton-loading 1.5s ease-in-out infinite;
}

@keyframes skeleton-loading {
  0% {
    opacity: 1;
  }
  50% {
    opacity: 0.4;
  }
  100% {
    opacity: 1;
  }
}

/* 搜索栏 */
.search-bar {
  background: white;
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  position: sticky;
  top: 0;
  z-index: 100;
}

.search-input-wrapper {
  position: relative;
  margin-bottom: 20rpx;
}

.search-input {
  width: 100%;
  height: 80rpx;
  padding: 0 100rpx 0 30rpx;
  background: #f8f9fa;
  border-radius: 40rpx;
  font-size: 28rpx;
  color: #333;
}

.search-actions {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.search-clear,
.search-btn {
  font-size: 32rpx;
  color: #999;
  padding: 10rpx;
}

.search-btn {
  color: #007aff;
}

.search-tools {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.sort-options {
  display: flex;
  gap: 30rpx;
}

.sort-item {
  font-size: 26rpx;
  color: #666;
  padding: 10rpx 0;
  position: relative;
}

.sort-item.active {
  color: #007aff;
  font-weight: 600;
}

.sort-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: #007aff;
  border-radius: 2rpx;
}

.filter-btn {
  display: flex;
  align-items: center;
  gap: 10rpx;
  padding: 15rpx 25rpx;
  background: #f8f9fa;
  border-radius: 25rpx;
  font-size: 26rpx;
  color: #666;
}

.filter-btn .cuIcon-filter {
  font-size: 24rpx;
}

/* 结果头部 */
.result-header {
  background: white;
  border-bottom: 1rpx solid #f0f0f0;
}

.result-stats {
  padding: 20rpx 30rpx;
  font-size: 26rpx;
  color: #666;
}

.tab-scroll {
  white-space: nowrap;
}

.tab-list {
  display: flex;
  padding: 0 30rpx;
}

.tab-item {
  display: flex;
  align-items: center;
  gap: 10rpx;
  padding: 25rpx 30rpx;
  margin-right: 20rpx;
  border-bottom: 4rpx solid transparent;
  white-space: nowrap;
}

.tab-item.active {
  border-bottom-color: #007aff;
}

.tab-name {
  font-size: 28rpx;
  color: #333;
}

.tab-item.active .tab-name {
  color: #007aff;
  font-weight: 600;
}

.tab-count {
  font-size: 22rpx;
  color: #999;
  background: #f0f0f0;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.tab-item.active .tab-count {
  background: #e3f2fd;
  color: #007aff;
}

/* 结果列表 */
.result-list {
  flex: 1;
  padding: 20rpx;
}

.result-section {
  margin-bottom: 10rpx;
}

.section-title {
  display: flex;
  align-items: center;
  gap: 15rpx;
  padding: 10rpx 0;
  font-weight: 600;
}

.section-title .cuIcon-goods,
.section-title .cuIcon-boxfill,
.section-title .cuIcon-bagfill {
  font-size: 32rpx;
}

/* 箱子网格布局 */
.boxes-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.box-item {
  transition: all 0.3s ease;
}

.box-item:active {
  transform: scale(0.98);
}

/* 箱子卡片样式 */
.box-card {
  border-radius: 16rpx;
  overflow: hidden;
}

/* 顶部色彩条 */
.box-color-bar {
  height: 12rpx;
  width: 100%;
}


/* 箱子头部 */
.box-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.box-title {
  font-size: 32rpx;
  font-weight: 600;
  line-height: 1.1;
  flex: 1;
  margin-bottom: 25rpx;
}

/* 箱子信息 */
.box-desc {
  margin-bottom: 0rpx;
}

.box-location {
  display: flex;
  align-items: center;
}

.location-icon {
  font-size: 24rpx;
  margin-right: 6rpx;
}

/* 箱子底部 */
.box-footer {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  position: relative;
}

.box-footer .box-location {
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  max-width: calc(100% - 80rpx);
}

.box-count {
  font-size: 38rpx;
  font-weight: 500;
  flex-shrink: 0;
}

/* 袋子列表样式 */
.bags-section {
  margin-bottom: 30rpx;
}

.section-title {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
}

.title-count {
  font-size: 28rpx;
  color: #999;
  margin-left: 16rpx;
}

.bags-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.bag-item {
  margin-bottom: 20rpx;
}

/* 袋子预览样式 - 参考add-bag页面预览设计 */
.bag-preview {
  padding: 30rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: linear-gradient(135deg, var(--color), var(--color));
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.15);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.bag-preview:active {
  transform: translateY(-2rpx);
  box-shadow: 0 12rpx 35rpx rgba(0, 0, 0, 0.2);
}

.bag-preview-info {
  flex: 1;
}

.bag-preview-name {
  font-size: 32rpx;
  font-weight: 600;
  color: white;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
  margin-bottom: 8rpx;
}

.bag-preview-count {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  text-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.2);
}

.bag-menu {
  padding: 10rpx;
  color: rgba(255, 255, 255, 0.8);
  font-size: 32rpx;
  z-index: 10;
}

/* 物品网格样式 */
.item-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.item-card {
  background: white;
  border-radius: 16rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.item-image {
  width: 100%;
  height: 200rpx;
  border-radius: 12rpx;
  object-fit: cover;
  margin-bottom: 15rpx;
}

.item-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
  line-height: 1.3;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.item-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.item-tag {
  background: #f0f4ff;
  color: #667eea;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  border: 1rpx solid #e0e8ff;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  color: #e0e0e0;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.empty-desc {
  font-size: 24rpx;
  color: #ccc;
  line-height: 1.5;
}

.item-card:active {
  transform: scale(0.98);
}

.item-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  overflow: hidden;
  background: #f8f9fa;
}

.item-image image {
  width: 100%;
  height: 100%;
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.item-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.4;
}

.item-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.item-meta {
  display: flex;
  gap: 20rpx;
  font-size: 24rpx;
  color: #999;
}

.item-location {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  color: #666;
}

.item-location .cuIcon-locationfill {
  font-size: 22rpx;
}

.item-tags {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  align-items: flex-end;
}

.tag {
  font-size: 20rpx;
  color: #007aff;
  background: #e3f2fd;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
}

/* 收纳盒列表 */
.box-list {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.box-card {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  transition: transform 0.2s;
}

.box-card:active {
  transform: scale(0.98);
}

.box-header {
  padding: 25rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.box-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}

.box-info {
  flex: 1;
}

.box-name {
  font-size: 28rpx;
  font-weight: 600;
  color: white;
  margin-bottom: 5rpx;
}

.box-location {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.8);
}

.box-content {
  padding: 25rpx;
}

.box-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
  margin-bottom: 15rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.box-stats {
  display: flex;
  gap: 20rpx;
}

.stat-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  color: #666;
}

.stat-item .cuIcon-goods,
.stat-item .cuIcon-bagfill {
  font-size: 22rpx;
}

/* 收纳袋列表 */
.bag-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.bag-card {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  transition: transform 0.2s;
}

.bag-card:active {
  transform: scale(0.98);
}

.bag-header {
  padding: 25rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.bag-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}

.bag-info {
  flex: 1;
}

.bag-name {
  font-size: 28rpx;
  font-weight: 600;
  color: white;
  margin-bottom: 5rpx;
}

.bag-box {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.8);
}

.bag-content {
  padding: 25rpx;
}

.bag-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
  margin-bottom: 15rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.bag-stats {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  color: #666;
}

.bag-stats .cuIcon-goods {
  font-size: 22rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 15rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #999;
  line-height: 1.4;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx;
  font-size: 26rpx;
  color: #666;
}

.loading-state .cu-load {
  margin-bottom: 20rpx;
}

.load-more {
  text-align: center;
  padding: 40rpx;
  font-size: 26rpx;
  color: #999;
}

/* 筛选面板 */
.filter-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: flex-end;
}

.filter-panel {
  width: 100%;
  max-height: 80vh;
  background: white;
  border-radius: 20rpx 20rpx 0 0;
  overflow: hidden;
}

.filter-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.filter-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.filter-header .cuIcon-close {
  font-size: 32rpx;
  color: #999;
  padding: 10rpx;
}

.filter-content {
  max-height: 60vh;
  overflow-y: auto;
  padding: 30rpx;
}

.filter-section {
  margin-bottom: 40rpx;
}

.filter-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.filter-actions {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  border-top: 1rpx solid #f0f0f0;
}

.filter-actions .cu-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .box-list {
    grid-template-columns: 1fr;
  }
  
  .search-tools {
    flex-direction: column;
    gap: 20rpx;
    align-items: stretch;
  }
  
  .sort-options {
    justify-content: space-around;
  }
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .page-container {
    background: #1a1a1a;
  }
  
  .search-bar,
  .result-header,
  .item-card,
  .box-card,
  .bag-card {
    background: #2d2d2d;
  }
  
  .search-input {
    background: #3d3d3d;
    color: #fff;
  }
  
  .section-title,
  .item-name,
  .empty-text,
  .filter-title {
    color: #fff;
  }
  
  .filter-panel {
    background: #2d2d2d;
  }
}