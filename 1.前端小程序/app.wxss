/* app.wxss */

/* 引入ColorUI样式库 */
@import "colorui/main.wxss";
@import "colorui/icon.wxss";
@import "colorui/animation.wxss";
@import "colorui/dark.wxss";

/* 全局基础样式 */
page {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', 'Helvetica Neue', Helvetica, Arial, sans-serif;
  line-height: 1.6;
}

/* 通用容器样式 */
.container {
  padding: 0 30rpx;
  min-height: 100vh;
}

.page-container {
  padding-top: 20rpx;
  padding-bottom: 40rpx;
}

/* 卡片样式 */
.card {
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.card-large {
  border-radius: 20rpx;
}

/* 列表项样式 */
.list-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  transition: background-color 0.2s ease;
}

.list-item:last-child {
  border-bottom: none;
}

.list-item-icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 12rpx;
  color: white;
  font-size: 36rpx;
}

.list-item-content {
  flex: 1;
}

.list-item-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.list-item-subtitle {
  font-size: 26rpx;
}

.list-item-arrow {
  font-size: 24rpx;
}

/* 按钮样式增强 */
.btn-primary {
  border: none;
  border-radius: 12rpx;
  color: white;
  font-weight: 600;
  transition: all 0.3s ease;
}

.btn-primary:active {
  transform: translateY(2rpx);
}

.btn-secondary {
  border-radius: 12rpx;
  font-weight: 500;
}

.btn-fab {
  position: fixed;
  bottom: 120rpx;
  right: 30rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  color: white;
  font-size: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
  transition: all 0.3s ease;
}

.btn-fab:active {
  transform: scale(0.95);
}

/* 搜索框样式 */
.search-container {
  padding: 20rpx 30rpx;
}

.search-box {
  display: flex;
  align-items: center;
  border-radius: 50rpx;
  padding: 20rpx 30rpx;
}

.search-icon {
  margin-right: 20rpx;
  font-size: 32rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 60rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-title {
  font-size: 32rpx;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.empty-subtitle {
  font-size: 26rpx;
  line-height: 1.8;
}

/* 标签样式 */
.tag {
  display: inline-block;
  padding: 8rpx 16rpx;
  background: rgba(18, 150, 219, 0.1);
  border-radius: 20rpx;
  font-size: 22rpx;
  margin-right: 12rpx;
  margin-bottom: 12rpx;
}

.tag-secondary {
  background: rgba(153, 153, 153, 0.1);
}

/* 骨架屏样式 */
.skeleton {
  background: linear-gradient(90deg, #f2f2f2 25%, #e6e6e6 37%, #f2f2f2 63%);
  background-size: 400% 100%;
  animation: skeleton-loading 1.4s ease infinite;
}

@keyframes skeleton-loading {
  0% {
    background-position: 100% 50%;
  }
  100% {
    background-position: 0 50%;
  }
}

.skeleton-text {
  height: 32rpx;
  border-radius: 4rpx;
  margin-bottom: 16rpx;
}

.skeleton-title {
  height: 40rpx;
  width: 60%;
  border-radius: 4rpx;
  margin-bottom: 20rpx;
}

.skeleton-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 12rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx;
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
}

/* 工具类 */
.text-center {
  text-align: center;
}

.text-left {
  text-align: left;
}

.text-right {
  text-align: right;
}

.flex {
  display: flex;
}

.flex-column {
  flex-direction: column;
}

.flex-center {
  align-items: center;
  justify-content: center;
}

.flex-between {
  justify-content: space-between;
}

.flex-1 {
  flex: 1;
}

.mt-20 {
  margin-top: 20rpx;
}

.mb-20 {
  margin-bottom: 20rpx;
}

.ml-20 {
  margin-left: 20rpx;
}

.mr-20 {
  margin-right: 20rpx;
}

.p-20 {
  padding: 20rpx;
}

.pt-20 {
  padding-top: 20rpx;
}

.pb-20 {
  padding-bottom: 20rpx;
}

.pl-20 {
  padding-left: 20rpx;
}

.pr-20 {
  padding-right: 20rpx;
}