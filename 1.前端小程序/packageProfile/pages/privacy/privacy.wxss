/* packageProfile/pages/privacy/privacy.wxss */

.page-container {
  min-height: 100vh;
  background-color: #f8f9fa;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 50vh;
}

.loading-text {
  margin-top: 20rpx;
  color: #666;
  font-size: 28rpx;
}

/* 内容容器 */
.content-container {
  padding: 40rpx;
}

/* Markdown内容 */
.markdown-content {
  background: white;
  border-radius: 16rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

/* 标题 */
.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 20rpx;
}

/* 更新时间 */
.update-time {
  font-size: 24rpx;
  color: #999;
  text-align: center;
  margin-bottom: 40rpx;
}

/* 内容区块 */
.content-section {
  margin-bottom: 40rpx;
}

.content-section:last-child {
  margin-bottom: 0;
}

/* 区块标题 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 4rpx;
  padding-left: 20rpx;
  border-left: 6rpx solid #667eea;
}

/* 区块内容 */
.section-content {
  font-size: 28rpx;
  line-height: 1.8;
  color: #666;
  padding-left: 26rpx;
  white-space: pre-line;
}