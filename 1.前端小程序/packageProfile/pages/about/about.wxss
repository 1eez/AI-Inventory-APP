/* packageProfile/pages/about/about.wxss */

/* 页面容器 */
.about-page {
  min-height: 100vh;
  padding-bottom: 40rpx;
}

/* 主要内容容器 */
.main-container {
  padding: 20rpx;
}

/* 应用信息区域 */
.app-info-section {
  border-radius: 20rpx;
  padding: 40rpx;
  margin: 0 10rpx 10rpx;
  text-align: center;
}

/* 应用Logo */
.app-logo {
  margin-bottom: 30rpx;
}

.logo-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 24rpx;
}

/* 应用详情 */
.app-details {
  margin-bottom: 40rpx;
}

.app-name {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 10rpx;
}

.app-version {
  display: block;
  font-size: 24rpx;
  margin-bottom: 20rpx;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  display: inline-block;
}

.app-description {
  display: block;
  font-size: 28rpx;
  line-height: 1.6;
}


/* 通用分组标题 */
.section-title {
  display: flex;
  align-items: center;
  padding: 30rpx 40rpx 20rpx;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 20rpx 20rpx 0 0;
  margin: 0 10rpx;
  margin-top: 30rpx;
}

.section-title text:first-child {
  margin-right: 16rpx;
  font-size: 36rpx;
}

.section-title text:last-child {
  flex: 1;
}

/* 通用卡片样式 */
.features-grid,
.team-card,
.contact-card,
.tech-card,
.version-card,
.libs-card,
.legal-card {
  border-radius: 0 0 20rpx 20rpx;
  margin: 0 10rpx 10rpx;
  overflow: hidden;
}

/* 功能特性 */
.features-grid {
  padding: 20rpx;
}

.feature-item {
  display: flex;
  align-items: flex-start;
  padding: 20rpx 16rpx;
  border-radius: 16rpx;
  transition: all 0.3s ease;
  margin-bottom: 12rpx;
}

.feature-item:active {
  transform: scale(0.95);
}

.feature-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
  margin-top: 2rpx;
}

.feature-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.feature-title {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 4rpx;
  display: block;
}

.feature-desc {
  font-size: 24rpx;
  line-height: 1.4;
}

/* 开发团队 */
.team-info {
  padding: 30rpx;
  text-align: center;
}

.company-name {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 10rpx;
}

.company-desc {
  display: block;
  font-size: 26rpx;
}

.contact-list {
  padding: 0;
}

.contact-item {
  display: flex;
  align-items: center;
  padding: 25rpx 30rpx;
  transition: background-color 0.3s ease;
}

.contact-item:active {
  background-color: #f8f9fa;
}

.contact-item text:first-child {
  margin-right: 20rpx;
  font-size: 32rpx;
}

.contact-text {
  flex: 1;
  font-size: 28rpx;
}

.contact-item text:last-child {
  font-size: 24rpx;
}

/* 技术栈 */
.tech-list {
  padding: 20rpx 0;
}

.tech-item {
  padding: 20rpx 30rpx;
}

.tech-name {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 6rpx;
}

.tech-desc {
  display: block;
  font-size: 24rpx;
}

/* 版本历史 */
.version-list {
  padding: 0;
}

.version-item {
  padding: 30rpx;
}

.version-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.version-number {
  font-size: 30rpx;
  font-weight: 600;
}

.version-date {
  font-size: 24rpx;
}

.version-changes {
  margin-left: 0;
}

.change-item {
  margin-bottom: 8rpx;
}

.change-text {
  font-size: 26rpx;
  line-height: 1.4;
}

/* 第三方库 */
.libs-list {
  padding: 0;
}

.lib-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx 30rpx;
}

.lib-name {
  font-size: 28rpx;
  font-weight: 500;
}

.lib-version {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

/* 操作按钮 */
.actions-section {
  margin-bottom: 40rpx;
}

.action-buttons {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.action-buttons .cu-btn {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-buttons .cu-btn text {
  margin-right: 12rpx;
}

/* 法律信息 */
.legal-list {
  padding: 0;
}

.legal-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  transition: background-color 0.2s;
}

.legal-title {
  flex: 1;
  font-size: 30rpx;
  font-weight: 500;
  margin-right: 20rpx;
}

.legal-desc {
  font-size: 26rpx;
  margin-right: 20rpx;
}

.legal-arrow {
  font-size: 24rpx;
}

/* 版权信息 */
.copyright-section {
  text-align: center;
  padding: 40rpx;
  margin: 30rpx;
  border-radius: 20rpx;
}

.copyright-text {
  display: block;
  font-size: 24rpx;
  line-height: 1.6;
  margin-bottom: 8rpx;
}

.build-info {
  display: block;
  font-size: 22rpx;
  margin-top: 16rpx;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .main-container {
    padding: 15rpx;
  }
  
  .app-info-section {
    padding: 30rpx 20rpx;
  }
  
  .statistics {
    flex-wrap: wrap;
    gap: 20rpx;
  }
  
  .stat-item {
    flex: 1;
    min-width: 120rpx;
  }
  
  .feature-item {
    padding: 25rpx 20rpx;
  }
  
  .feature-icon {
    width: 60rpx;
    height: 60rpx;
    border-radius: 30rpx;
    margin-right: 20rpx;
  }
  
  .feature-icon text {
    font-size: 28rpx;
  }
  
  .action-buttons .cu-btn {
    height: 70rpx;
    line-height: 70rpx;
    font-size: 26rpx;
  }
}



/* 动画效果 */
.app-info-section,
.team-card,
.tech-card,
.version-card,
.libs-card,
.legal-card,
.features-grid {
  animation: slideInUp 0.6s ease-out;
}

@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 图标颜色 */
.text-blue {
  color: #007aff !important;
}

.text-orange {
  color: #ff9500 !important;
}

.text-green {
  color: #34c759 !important;
}

.text-purple {
  color: #af52de !important;
}

.text-cyan {
  color: #5ac8fa !important;
}

.text-red {
  color: #ff3b30 !important;
}

.text-white {
  color: #ffffff !important;
}