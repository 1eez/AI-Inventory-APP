/* packageProfile/pages/help/help.wxss */

.page-container {
  min-height: 100vh;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 50vh;
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
}

/* 内容容器 */
.content-container {
  padding: 40rpx;
}

/* 页面头部 */
.page-header {
  text-align: center;
  margin-bottom: 40rpx;
}

/* 帮助章节 */
.help-sections {
  margin-bottom: 40rpx;
}

/* 章节卡片 */
.section-card {
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

/* 章节头部 */
.section-header {
  display: flex;
  align-items: center;
  padding: 30rpx;
  cursor: pointer;
  transition: background-color 0.3s ease;
}

.section-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.section-icon text {
  font-size: 32rpx;
}

.section-title {
  flex: 1;
  font-size: 32rpx;
  font-weight: 600;
}

.section-arrow {
  transition: transform 0.3s ease;
}

.section-arrow.expanded {
  transform: rotate(180deg);
}

.section-arrow text {
  font-size: 24rpx;
}

/* 章节内容 */
.section-content {
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.3s ease;
}

.section-content.show {
  max-height: 2000rpx;
}

/* 内容项 */
.content-item {
  display: flex;
  padding: 30rpx;
}

.content-item:first-child {
  border-top: none;
}

/* 步骤编号 */
.step-number {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.step-content {
  flex: 1;
}

.step-title {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.step-desc {
  font-size: 26rpx;
  line-height: 1.6;
}

/* 功能项 */
.feature-item {
  padding: 30rpx;
}

.feature-item:first-child {
  border-top: none;
}

.feature-title {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.feature-desc {
  font-size: 26rpx;
  line-height: 1.8;
  white-space: pre-line;
}

/* 问答项 */
.qa-item {
  padding: 30rpx;
}

.qa-item:first-child {
  border-top: none;
}

.question {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.answer {
  font-size: 26rpx;
  line-height: 1.6;
  padding-left: 20rpx;
}

/* 支持区域 */
.support-section {
  border-radius: 16rpx;
  padding: 40rpx;
  text-align: center;
}

.support-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.support-desc {
  font-size: 26rpx;
  margin-bottom: 30rpx;
  line-height: 1.6;
}

.support-contact {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
}

.support-contact text:first-child {
  margin-right: 12rpx;
  font-size: 28rpx;
}