/* packageStorage/pages/item-detail/item-detail.wxss */

/* 页面容器 */
.page-container {
  min-height: 100vh;
  background: #f5f7fa;
  padding-bottom: 120rpx;
}

/* 主容器 */
.container {
  padding: 30rpx;
  padding-top: 0;
}

/* 骨架屏样式 */
.skeleton-container {
  padding: 30rpx;
}

.skeleton-images {
  margin-bottom: 30rpx;
}

.skeleton-image-main {
  width: 100%;
  height: 400rpx;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}

.skeleton-image-thumbs {
  display: flex;
  gap: 16rpx;
}

.skeleton-image-thumb {
  width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
}

.skeleton-info {
  margin-bottom: 30rpx;
}

.skeleton-title {
  width: 60%;
  height: 48rpx;
  margin-bottom: 16rpx;
}

.skeleton-subtitle {
  width: 40%;
  height: 32rpx;
  margin-bottom: 20rpx;
}

.skeleton-description {
  width: 100%;
  height: 80rpx;
}

.skeleton-details {
  margin-bottom: 30rpx;
}

.skeleton-section-title {
  width: 30%;
  height: 36rpx;
  margin-bottom: 20rpx;
}

.skeleton-detail-item {
  width: 100%;
  height: 60rpx;
  margin-bottom: 16rpx;
}

/* 错误状态 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  text-align: center;
}

.error-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.6;
}

.error-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 16rpx;
}

.error-message {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 40rpx;
  line-height: 1.5;
}

/* 卡片通用样式 */
.card {
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.card-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
  display: flex;
  align-items: center;
}

.card-action {
  font-size: 26rpx;
  font-weight: 500;
}

/* 图片展示区 */
.image-section {
  margin-bottom: 30rpx;
}

.image-swiper {
  width: 100%;
  height: 400rpx;
  border-radius: 20rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.item-image {
  width: 100%;
  height: 100%;
}

.image-thumbs {
  display: flex;
  gap: 16rpx;
  overflow-x: auto;
  padding: 0 4rpx;
}

.thumb-item {
  flex-shrink: 0;
  width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
  overflow: hidden;
  border: 3rpx solid transparent;
  transition: all 0.3s ease;
}

.thumb-item.active {
  border-color: #667eea;
  transform: scale(1.05);
}

.thumb-image {
  width: 100%;
  height: 100%;
}

/* 基本信息卡片 */

.item-header {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.item-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #2c3e50;
  line-height: 1.3;
  flex: 1;
  margin-right: 20rpx;
}

.item-value {
  font-size: 32rpx;
  font-weight: 700;
  color: #e74c3c;
}

.item-meta {
  margin-bottom: 24rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.meta-item:last-child {
  margin-bottom: 0;
}

.meta-label {
  font-size: 26rpx;
  color: #666;
  width: 140rpx;
  flex-shrink: 0;
}

.meta-value {
  font-size: 26rpx;
  color: #2c3e50;
  font-weight: 500;
}

.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.tag-item {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.item-description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 位置信息卡片 */

.location-path {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  gap: 16rpx;
}

.path-item {
  display: flex;
  align-items: center;
  background: #f8f9fa;
  padding: 16rpx 20rpx;
  border-radius: 16rpx;
  flex-shrink: 0;
}

.path-icon {
  font-size: 28rpx;
  margin-right: 12rpx;
}

.path-text {
  font-size: 26rpx;
  color: #2c3e50;
  font-weight: 500;
}

.path-arrow {
  font-size: 24rpx;
  flex-shrink: 0;
}

/* 规格参数卡片 */

.specs-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.spec-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.spec-item:last-child {
  border-bottom: none;
}

.spec-label {
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
}

.spec-value {
  font-size: 26rpx;
  color: #2c3e50;
  font-weight: 600;
  text-align: right;
  flex: 1;
  margin-left: 20rpx;
}

/* 备注信息卡片 */

.notes-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  background: #f8f9fa;
  padding: 24rpx;
  border-radius: 16rpx;
  border-left: 6rpx solid #667eea;
}

/* 相关物品卡片 */

.related-scroll {
  width: 100%;
  white-space: nowrap;
}

.related-list {
  display: flex;
  gap: 20rpx;
  padding: 0 4rpx;
}

.related-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 160rpx;
  flex-shrink: 0;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.related-item:active {
  transform: scale(0.95);
  background: #e9ecef;
}

.related-image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 12rpx;
  margin-bottom: 12rpx;
}

.related-name {
  font-size: 24rpx;
  color: #2c3e50;
  font-weight: 600;
  text-align: center;
  margin-bottom: 6rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 100%;
}

.related-category {
  font-size: 20rpx;
  color: #999;
  text-align: center;
}

/* 操作历史卡片 */

.history-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.history-item {
  display: flex;
  align-items: flex-start;
}

.history-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 16rpx;
  background: #f0f8ff;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.history-icon text {
  font-size: 28rpx;
}

.history-content {
  flex: 1;
}

.history-description {
  font-size: 28rpx;
  color: #2c3e50;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.history-meta {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.history-time {
  font-size: 24rpx;
  color: #999;
}

.history-operator {
  font-size: 24rpx;
  color: #666;
}

/* 底部操作栏 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  border-top: 1rpx solid #f0f0f0;
  z-index: 100;
}

.action-group {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20rpx 16rpx;
  background: #f8f9fa;
  border: none;
  border-radius: 16rpx;
  font-size: 24rpx;
  color: #2c3e50;
  transition: all 0.3s ease;
}

.action-btn text:first-child {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.action-btn:active {
  transform: scale(0.95);
  background: #e9ecef;
}

.action-btn.danger {
  color: #e74c3c;
}

.action-btn.danger:active {
  background: #ffeaea;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .item-header {
    flex-direction: column;
    align-items: flex-start;
  }
  
  .item-value {
    margin-top: 12rpx;
  }
  
  .location-path {
    flex-direction: column;
    align-items: flex-start;
  }
  
  .path-arrow {
    transform: rotate(90deg);
    margin: 8rpx 0;
  }
  
  .action-group {
    flex-wrap: wrap;
  }
  
  .action-btn {
    min-width: calc(50% - 10rpx);
  }
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .page-container {
    background: #1a202c;
  }
  
  .card {
    background: #2d3748;
  }
  
  .card-title,
  .item-title,
  .meta-value,
  .spec-value,
  .path-text,
  .related-name,
  .history-description {
    color: #fff;
  }
  
  .meta-label,
  .spec-label,
  .item-description,
  .notes-content {
    color: #a0aec0;
  }
  
  .path-item,
  .related-item,
  .notes-content {
    background: #4a5568;
  }
  
  .related-item:active {
    background: #718096;
  }
  
  .history-icon {
    background: #4a5568;
  }
  
  .bottom-actions {
    background: #2d3748;
    border-top-color: #4a5568;
  }
  
  .action-btn {
    background: #4a5568;
    color: #fff;
  }
  
  .action-btn:active {
    background: #718096;
  }
  
  .action-btn.danger:active {
    background: #742a2a;
  }
}