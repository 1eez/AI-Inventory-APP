/* packageStorage/pages/box-detail/box-detail.wxss */

/* 页面容器 */
.page-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
}

/* 导航栏 */
.nav-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #2c3e50;
}

.nav-right {
  display: flex;
  align-items: center;
}

.nav-icon {
  font-size: 40rpx;
  color: #667eea;
  padding: 10rpx;
}

/* 搜索容器 */
.search-container {
  padding: 20rpx 30rpx;
  background: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.search-box {
  display: flex;
  align-items: center;
  background: #f8f9fa;
  border-radius: 50rpx;
  padding: 20rpx 30rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.search-box:focus-within {
  border-color: #667eea;
  background: #fff;
  box-shadow: 0 0 0 6rpx rgba(102, 126, 234, 0.1);
}

.search-icon {
  font-size: 32rpx;
  color: #999;
  margin-right: 20rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

/* 主容器 */
.container {
  padding: 30rpx;
}

/* 骨架屏样式 */
.skeleton-container {
  padding: 0;
}

.skeleton-box-info {
  display: flex;
  padding: 40rpx;
  background: #fff;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
}

.skeleton-content {
  flex: 1;
  margin-left: 30rpx;
}

.skeleton-bag-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background: #fff;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}

/* 箱子信息卡片 */
.box-info-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 20rpx 40rpx rgba(102, 126, 234, 0.3);
}

.box-header {
  display: flex;
  align-items: flex-start;
  margin-bottom: 40rpx;
}

.box-icon-large {
  width: 120rpx;
  height: 120rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.2);
  margin-right: 30rpx;
  backdrop-filter: blur(10rpx);
}

.box-icon-large text {
  font-size: 60rpx;
  color: #fff;
}

.box-main-info {
  flex: 1;
}

.box-name-large {
  font-size: 40rpx;
  font-weight: 700;
  margin-bottom: 16rpx;
  line-height: 1.3;
}

.box-description-large {
  font-size: 28rpx;
  opacity: 0.9;
  line-height: 1.5;
  margin-bottom: 20rpx;
}

.box-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.box-tags .tag {
  background: rgba(255, 255, 255, 0.2);
  color: #fff;
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  backdrop-filter: blur(10rpx);
}

.box-stats-row {
  display: flex;
  align-items: center;
  justify-content: space-around;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
  backdrop-filter: blur(10rpx);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.stat-number {
  font-size: 36rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.8;
}

.stat-divider {
  width: 2rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.3);
}

/* 快速操作 */
.quick-actions {
  margin-bottom: 30rpx;
}

.action-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 30rpx;
}

.action-buttons {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 20rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.action-btn:active {
  transform: scale(0.95);
  background: #e9ecef;
}

.action-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
}

.action-icon text {
  font-size: 36rpx;
  color: #fff;
}

.action-text {
  font-size: 24rpx;
  color: #666;
  font-weight: 500;
}

/* 袋子列表 */
.bags-section {
  margin-bottom: 30rpx;
}

.section-title {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
}

.title-count {
  font-size: 28rpx;
  color: #999;
  margin-left: 16rpx;
}

.bags-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.bag-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.bag-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg, #667eea, #764ba2);
  transform: scaleX(0);
  transition: transform 0.3s ease;
}

.bag-item:active::before {
  transform: scaleX(1);
}

.bag-item:active {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.15);
}

.bag-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

.bag-icon text {
  font-size: 36rpx;
  color: #fff;
}

.bag-content {
  flex: 1;
}

.bag-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.bag-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
  flex: 1;
}

.bag-menu {
  padding: 10rpx;
  color: #999;
  font-size: 32rpx;
}

.bag-description {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 16rpx;
  line-height: 1.4;
}

.bag-meta {
  display: flex;
  align-items: center;
  gap: 30rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

.meta-icon {
  font-size: 24rpx;
  margin-right: 8rpx;
}

.meta-text {
  font-size: 24rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 60rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  color: #ddd;
  margin-bottom: 40rpx;
}

.empty-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #666;
  margin-bottom: 20rpx;
}

.empty-subtitle {
  font-size: 26rpx;
  color: #999;
  line-height: 1.6;
  margin-bottom: 60rpx;
}

/* 悬浮按钮 */
.btn-fab {
  position: fixed;
  right: 60rpx;
  bottom: 120rpx;
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 12rpx 40rpx rgba(102, 126, 234, 0.4);
  z-index: 100;
  transition: all 0.3s ease;
}

.btn-fab:active {
  transform: scale(0.9);
}

.btn-fab text {
  font-size: 48rpx;
  color: #fff;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .action-buttons {
    flex-direction: column;
    gap: 16rpx;
  }
  
  .action-btn {
    flex-direction: row;
    justify-content: flex-start;
    padding: 24rpx;
  }
  
  .action-icon {
    width: 60rpx;
    height: 60rpx;
    margin-right: 20rpx;
    margin-bottom: 0;
  }
  
  .box-stats-row {
    flex-direction: column;
    gap: 20rpx;
  }
  
  .stat-divider {
    width: 100%;
    height: 2rpx;
  }
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .page-container {
    background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
  }
  
  .search-container {
    background: #34495e;
    border-bottom-color: #4a5568;
  }
  
  .search-box {
    background: #4a5568;
    color: #fff;
  }
  
  .search-box:focus-within {
    background: #2d3748;
  }
  
  .bag-item {
    background: #2d3748;
  }
  
  .bag-name {
    color: #fff;
  }
  
  .bag-description {
    color: #a0aec0;
  }
  
  .action-btn {
    background: #2d3748;
  }
  
  .action-btn:active {
    background: #4a5568;
  }
  
  .action-text {
    color: #a0aec0;
  }
  
  .title-text {
    color: #fff;
  }
}