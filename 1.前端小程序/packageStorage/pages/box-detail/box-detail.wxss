/* packageStorage/pages/box-detail/box-detail.wxss */

/* 页面容器 */
.page-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #ffffff 0%, #f2f7ff 100%);
}

/* 导航栏 */
.nav-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #2c3e50;
}

.nav-right {
  display: flex;
  align-items: center;
}

.nav-icon {
  font-size: 40rpx;
  color: #667eea;
  padding: 10rpx;
}

/* 搜索容器 */
.search-container {
  padding: 20rpx 30rpx;
  background: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.search-box {
  display: flex;
  align-items: center;
  background: #f8f9fa;
  border-radius: 50rpx;
  padding: 20rpx 30rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.search-box:focus-within {
  border-color: #667eea;
  background: #fff;
  box-shadow: 0 0 0 6rpx rgba(102, 126, 234, 0.1);
}

.search-icon {
  font-size: 32rpx;
  color: #999;
  margin-right: 20rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

/* 主容器 */
.container {
  padding: 30rpx;
}

/* 骨架屏样式 */
.skeleton-container {
  padding: 0;
}

.skeleton-box-info {
  display: flex;
  padding: 40rpx;
  background: #fff;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
}

.skeleton-content {
  flex: 1;
  margin-left: 30rpx;
}

.skeleton-bag-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background: #fff;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}

/* 箱子信息卡片 */
.box-info-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 0;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

/* 箱子预览样式 - 参考add-box预览设计 */
.box-preview {
  padding: 30rpx;
  border-radius: 20rpx;
  position: relative;
  overflow: hidden;
}

.box-preview-content {
  position: relative;
  z-index: 2;
}

.box-preview-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #fff;
  margin-bottom: 12rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

.box-preview-desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 20rpx;
  line-height: 1.4;
  text-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.2);
}

.box-preview-meta {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  margin-top: auto;
  padding-top: 8px;
}

.box-preview-location {
  display: flex;
  align-items: center;
  color: rgba(255, 255, 255, 0.8);
  font-size: 24rpx;
}

.box-preview-location .cuIcon-locationfill {
  margin-right: 4px;
  font-size: 24rpx;
}

.box-preview-date {
  display: flex;
  align-items: center;
  color: rgba(255, 255, 255, 0.7);
  font-size: 22rpx;
}

.preview-date-text {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* 统计信息卡片样式 - 与home页面保持一致 */
.stats-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin: 32rpx 0;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.stats-content {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.stat-number {
  font-size: 48rpx;
  font-weight: 600;
  color: #333;
  line-height: 1;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
}

.stat-divider {
  width: 2rpx;
  height: 60rpx;
  background: #e5e5e5;
}

/* 快速操作 - 与home页面保持一致 */
.quick-actions {
  margin-bottom: 30rpx;
  padding: 30rpx;
}

.action-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 30rpx;
}

.action-buttons {
  display: flex;
  justify-content: space-around;
  gap: 20rpx;
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.action-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 36rpx;
  margin-bottom: 16rpx;
  box-shadow: var(--shadow-light);
}

.action-text {
  font-size: 24rpx;
  color: var(--text-secondary);
  font-weight: 500;
}

/* 袋子列表 */
.bags-section {
  margin-bottom: 30rpx;
}

.section-title {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
}

.title-count {
  font-size: 28rpx;
  color: #999;
  margin-left: 16rpx;
}

.bags-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.bag-item {
  margin-bottom: 20rpx;
}

/* 袋子预览样式 - 参考add-bag页面预览设计 */
.bag-preview {
  padding: 30rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: linear-gradient(135deg, var(--color), var(--color));
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.15);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.bag-preview:active {
  transform: translateY(-2rpx);
  box-shadow: 0 12rpx 35rpx rgba(0, 0, 0, 0.2);
}

.bag-preview-info {
  flex: 1;
}

.bag-preview-name {
  font-size: 32rpx;
  font-weight: 600;
  color: white;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

.bag-menu {
  padding: 10rpx;
  color: rgba(255, 255, 255, 0.8);
  font-size: 32rpx;
  z-index: 10;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  color: #ddd;
  margin-bottom: 20rpx;
}

.empty-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #666;
  margin-bottom: 20rpx;
}

.empty-subtitle {
  font-size: 24rpx;
  color: #999;
  line-height: 1.8;
  margin-bottom: 20rpx;
  white-space: pre-line;
}

/* 悬浮按钮 */
.btn-fab {
  position: fixed;
  right: 60rpx;
  bottom: 120rpx;
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 12rpx 40rpx rgba(102, 126, 234, 0.4);
  z-index: 100;
  transition: all 0.3s ease;
}

.btn-fab:active {
  transform: scale(0.9);
}

.btn-fab text {
  font-size: 48rpx;
  color: #fff;
}

/* 响应式设计 */
@media (max-width: 375px) {
  /* 保持快速操作按钮横向排列 */
  .action-buttons {
    display: flex;
    justify-content: space-around;
    gap: 16rpx;
  }
  
  .action-btn {
    display: flex;
    flex-direction: column;
    align-items: center;
    flex: 1;
  }
  
  .action-icon {
    width: 60rpx;
    height: 60rpx;
    margin-bottom: 12rpx;
  }
  
  .action-text {
    font-size: 22rpx;
  }
  
  /* 保持统计信息横向排列 */
  .stats-content {
    display: flex;
    justify-content: space-around;
    align-items: center;
  }
  
  .stat-divider {
    width: 2rpx;
    height: 60rpx;
  }
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .page-container {
    background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
  }
  
  .search-container {
    background: #34495e;
    border-bottom-color: #4a5568;
  }
  
  .search-box {
    background: #4a5568;
    color: #fff;
  }
  
  .search-box:focus-within {
    background: #2d3748;
  }
  
  .bag-item {
    background: #2d3748;
  }
  
  .bag-name {
    color: #fff;
  }
  
  .bag-description {
    color: #a0aec0;
  }
  
  .action-btn {
    background: #2d3748;
  }
  
  .action-btn:active {
    background: #4a5568;
  }
  
  .action-text {
    color: #a0aec0;
  }
  
  .title-text {
    color: #fff;
  }
}