/* packageStorage/pages/bag-detail/bag-detail.wxss */

/* 页面容器 */
.page-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #ffffff 0%, #f2f7ff 100%);
}

/* 导航栏 */
.nav-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #2c3e50;
}

.nav-right {
  display: flex;
  align-items: center;
}

.nav-icon {
  font-size: 40rpx;
  color: #667eea;
  padding: 10rpx;
}

/* 搜索容器 */
.search-container {
  padding: 20rpx 30rpx;
  background: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.search-box {
  display: flex;
  align-items: center;
  background: #f8f9fa;
  border-radius: 50rpx;
  padding: 20rpx 30rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.search-box:focus-within {
  border-color: #667eea;
  background: #fff;
  box-shadow: 0 0 0 6rpx rgba(102, 126, 234, 0.1);
}

.search-icon {
  font-size: 32rpx;
  color: #999;
  margin-right: 20rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

/* 主容器 */
.container {
  padding: 30rpx;
}

/* 骨架屏样式 */
.skeleton-container {
  padding: 0;
}

.skeleton-box-info {
  display: flex;
  padding: 40rpx;
  background: #fff;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}

.skeleton-bag-info {
  display: flex;
  padding: 40rpx;
  background: #fff;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.skeleton-content {
  flex: 1;
  margin-left: 30rpx;
}

.skeleton-item-card {
  display: flex;
  padding: 30rpx;
  background: #fff;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}

.skeleton-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
  margin-right: 30rpx;
}

/* 箱子信息卡片 */
.box-info-card {
  margin-bottom: 20rpx;
}

.box-preview {
  border-radius: 20rpx;
  padding: 40rpx;
  color: #fff;
  position: relative;
  overflow: hidden;
}

.box-preview-content {
  position: relative;
  z-index: 2;
}

.box-preview-name {
  font-size: 36rpx;
  font-weight: 700;
  margin-bottom: 12rpx;
  line-height: 1.3;
}

.box-preview-desc {
  font-size: 28rpx;
  opacity: 0.9;
  margin-bottom: 24rpx;
  line-height: 1.4;
}

.box-preview-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  opacity: 0.8;
}

.box-preview-location {
  display: flex;
  align-items: center;
}

.box-preview-location text:first-child {
  margin-right: 8rpx;
  font-size: 26rpx;
}

.preview-date-text {
  font-size: 24rpx;
}

/* 袋子信息卡片 */
.bag-info-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.1);
  border-left: 6rpx solid #667eea;
}

.preview-container {
  margin-bottom: 20rpx;
}

.preview-bag {
  border-radius: 16rpx;
  padding: 30rpx;
  color: #fff;
  position: relative;
  overflow: hidden;
}

.preview-info {
  position: relative;
  z-index: 2;
}

.preview-name {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
  line-height: 1.3;
}

.preview-desc {
  font-size: 26rpx;
  opacity: 0.9;
  line-height: 1.4;
}

.bag-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.bag-tags .tag {
  background: #e3f2fd;
  color: #1976d2;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.bag-header {
  display: flex;
  align-items: flex-start;
  margin-bottom: 40rpx;
}

.bag-icon-large {
  width: 120rpx;
  height: 120rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.2);
  margin-right: 30rpx;
  backdrop-filter: blur(10rpx);
}

.bag-icon-large text {
  font-size: 60rpx;
  color: #fff;
}

.bag-main-info {
  flex: 1;
}

.bag-name-large {
  font-size: 40rpx;
  font-weight: 700;
  margin-bottom: 16rpx;
  line-height: 1.3;
}

.bag-description-large {
  font-size: 28rpx;
  opacity: 0.9;
  line-height: 1.5;
  margin-bottom: 20rpx;
}

.bag-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.bag-tags .tag {
  background: rgba(255, 255, 255, 0.2);
  color: #fff;
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  backdrop-filter: blur(10rpx);
}

/* 统计信息卡片 */
.stats-card {
  margin-bottom: 20rpx;
}

.stats-content {
  display: flex;
  align-items: center;
  justify-content: space-around;
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.08);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.stat-number {
  font-size: 36rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
  color: #2c3e50;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

.stat-divider {
  width: 2rpx;
  height: 60rpx;
  background: #e9ecef;
}

.bag-location {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 12rpx;
  padding: 20rpx;
  backdrop-filter: blur(10rpx);
}

.location-icon {
  font-size: 28rpx;
  margin-right: 12rpx;
  opacity: 0.8;
}

.location-text {
  font-size: 26rpx;
  opacity: 0.9;
}

/* 快速操作 - 与box-detail页面保持一致 */
.quick-actions {
  margin-bottom: 30rpx;
  padding: 30rpx;
}

.action-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 30rpx;
}

.action-buttons {
  display: flex;
  justify-content: space-around;
  gap: 20rpx;
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.action-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 36rpx;
  margin-bottom: 16rpx;
  box-shadow: var(--shadow-light);
}

.action-text {
  font-size: 24rpx;
  color: var(--text-secondary);
  font-weight: 500;
}

/* 物品列表 */
.items-section {
  margin-bottom: 30rpx;
}

.section-title {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
}

.title-count {
  font-size: 28rpx;
  color: #999;
  margin-left: 16rpx;
}

.items-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.item-card {
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  position: relative;
}

.item-card:active {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.15);
}

.item-image-container {
  position: relative;
  width: 100%;
  height: 200rpx;
  background: #f8f9fa;
}

.item-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.item-menu {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  width: 60rpx;
  height: 60rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 28rpx;
  backdrop-filter: blur(10rpx);
}

.item-quantity {
  position: absolute;
  bottom: 16rpx;
  right: 16rpx;
  background: rgba(0, 0, 0, 0.7);
  color: #fff;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  backdrop-filter: blur(10rpx);
}

.item-content {
  padding: 24rpx;
}

.item-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 8rpx;
  line-height: 1.3;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.item-description {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 16rpx;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.item-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-bottom: 16rpx;
}

.item-tag {
  background: #e3f2fd;
  color: #1976d2;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  line-height: 1;
}

.item-meta {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.meta-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.meta-item {
  display: flex;
  align-items: center;
  font-size: 22rpx;
  color: #999;
  flex: 1;
}

.meta-icon {
  font-size: 22rpx;
  margin-right: 6rpx;
}

.meta-text {
  font-size: 22rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 60rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  color: #ddd;
  margin-bottom: 40rpx;
}

.empty-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #666;
  margin-bottom: 20rpx;
}

.empty-subtitle {
  font-size: 26rpx;
  color: #999;
  line-height: 1.6;
  margin-bottom: 60rpx;
}

/* 悬浮按钮 */
.btn-fab {
  position: fixed;
  right: 60rpx;
  bottom: 120rpx;
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 12rpx 40rpx rgba(102, 126, 234, 0.4);
  z-index: 100;
  transition: all 0.3s ease;
}

.btn-fab:active {
  transform: scale(0.9);
}

.btn-fab text {
  font-size: 48rpx;
  color: #fff;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .items-grid {
    grid-template-columns: 1fr;
  }
  
  .item-card {
    display: flex;
    flex-direction: row;
  }
  
  .item-image-container {
    width: 160rpx;
    height: 160rpx;
    flex-shrink: 0;
  }
  
  .item-content {
    flex: 1;
    padding: 20rpx;
  }
  
  .action-buttons {
    flex-direction: column;
    gap: 16rpx;
  }
  
  .action-btn {
    flex-direction: row;
    justify-content: flex-start;
    padding: 24rpx;
  }
  
  .action-icon {
    width: 60rpx;
    height: 60rpx;
    margin-right: 20rpx;
    margin-bottom: 0;
  }
  
  .bag-stats-row {
    flex-direction: column;
    gap: 20rpx;
  }
  
  .stat-divider {
    width: 100%;
    height: 2rpx;
  }
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .page-container {
    background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
  }
  
  .search-container {
    background: #34495e;
    border-bottom-color: #4a5568;
  }
  
  .search-box {
    background: #4a5568;
    color: #fff;
  }
  
  .search-box:focus-within {
    background: #2d3748;
  }
  
  .item-card {
    background: #2d3748;
  }
  
  .item-name {
    color: #fff;
  }
  
  .item-description {
    color: #a0aec0;
  }
  
  .action-btn {
    background: #2d3748;
  }
  
  .action-btn:active {
    background: #4a5568;
  }
  
  .action-text {
    color: #a0aec0;
  }
  
  .title-text {
    color: #fff;
  }
  
  .item-tag {
    background: #2d3748;
    color: #64b5f6;
  }
}