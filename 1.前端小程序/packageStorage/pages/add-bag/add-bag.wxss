/* packageStorage/pages/add-bag/add-bag.wxss */

/* 页面容器 */
.page-container {
  min-height: 100vh;
  background: #f5f7fa;
  padding: 20rpx;
  padding-bottom: 200rpx;
}

/* 收纳盒信息卡片 */
.box-info-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.box-info-header {
  display: flex;
  align-items: center;
  flex: 1;
}

.box-info-header .cuIcon-boxfill {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.box-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-right: 20rpx;
}

.box-location {
  font-size: 26rpx;
  color: #999;
}

.box-info-action {
  padding: 10rpx;
}

.box-info-action .cuIcon-right {
  font-size: 28rpx;
  color: #999;
}

/* 表单卡片 */
.form-card {
  background: white;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.card-header {
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  align-items: center;
}

.card-header .cuIcon-infofill,
.card-header .cuIcon-tagfill,
.card-header .cuIcon-colorlens,
.card-header .cuIcon-eyefill {
  font-size: 32rpx;
  margin-right: 15rpx;
}

.card-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

/* 表单区域 */
.form-section {
  padding: 30rpx;
}

.form-item {
  margin-bottom: 40rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  display: block;
}

.required {
  color: #e74c3c;
}

.form-input {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  background: #fff;
  transition: border-color 0.3s;
}

.form-input:focus {
  border-color: #007aff;
}

.form-input.error {
  border-color: #e74c3c;
}

.form-textarea {
  width: 100%;
  min-height: 120rpx;
  padding: 20rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  background: #fff;
  transition: border-color 0.3s;
}

.form-textarea:focus {
  border-color: #007aff;
}

.form-textarea.error {
  border-color: #e74c3c;
}

.error-text {
  color: #e74c3c;
  font-size: 24rpx;
  margin-top: 10rpx;
}

/* 类型网格 */
.type-grid {
  padding: 30rpx;
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.type-item {
  padding: 25rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  transition: all 0.3s;
  background: white;
}

.type-item.active {
  border-color: #007aff;
  background: #007aff;
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 25rpx rgba(0, 122, 255, 0.3);
}

.type-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #f8f9fa;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  font-size: 28rpx;
}

.type-item.active .type-icon {
  background: rgba(255, 255, 255, 0.2);
}

.type-info {
  flex: 1;
}

.type-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 5rpx;
}

.type-item.active .type-name {
  color: white;
}

.type-desc {
  font-size: 22rpx;
  color: #999;
  line-height: 1.4;
}

.type-item.active .type-desc {
  color: rgba(255, 255, 255, 0.8);
}

/* 颜色网格 */
.color-grid {
  padding: 30rpx;
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.color-item {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
  border: 4rpx solid transparent;
  justify-self: center;
}

.color-item.active {
  transform: scale(1.1);
  border-color: rgba(0, 0, 0, 0.1);
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.15);
}

.color-item .cuIcon-check {
  font-size: 32rpx;
}

/* 预览卡片 */
.preview-card {
  background: white;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.preview-container {
  padding: 30rpx;
}

.preview-bag {
  padding: 30rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, var(--color), var(--color));
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.15);
}

.preview-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 25rpx;
  font-size: 36rpx;
}

.preview-info {
  flex: 1;
}

.preview-name {
  font-size: 32rpx;
  font-weight: 600;
  color: white;
  margin-bottom: 8rpx;
}

.preview-desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.4;
}

/* 操作按钮 */
.action-buttons {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 30rpx;
  background: white;
  border-top: 1rpx solid #f0f0f0;
  display: flex;
  gap: 20rpx;
  z-index: 100;
}

.action-buttons .cu-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 30rpx;
  font-weight: 600;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .type-grid {
    grid-template-columns: 1fr;
  }
  
  .color-grid {
    grid-template-columns: repeat(3, 1fr);
  }
  
  .action-buttons {
    flex-direction: column;
  }
  
  .action-buttons .cu-btn {
    width: 100%;
  }
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .page-container {
    background: #1a1a1a;
  }
  
  .form-card,
  .box-info-card,
  .preview-card {
    background: #2d2d2d;
  }
  
  .card-title,
  .box-name,
  .form-label,
  .type-name {
    color: #fff;
  }
  
  .form-input,
  .form-textarea {
    background: #3d3d3d;
    border-color: #4d4d4d;
    color: #fff;
  }
  
  .type-item {
    background: #3d3d3d;
    border-color: #4d4d4d;
  }
  
  .type-icon {
    background: #4d4d4d;
  }
  
  .action-buttons {
    background: #2d2d2d;
    border-top-color: #4d4d4d;
  }
}