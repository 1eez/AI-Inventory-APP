/* packageStorage/pages/add-box/add-box.wxss */

/* 页面容器 */
.page-container {
  min-height: 100vh;
  background: #f5f7fa;
  padding-bottom: 120rpx;
}

/* 主容器 */
.container {
  padding: 30rpx;
  padding-top: 0;
}

/* 卡片样式 */
.card {
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

/* 表单区域 */
.form-section {
  margin-bottom: 40rpx;
}

.form-section:last-child {
  margin-bottom: 0;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
}

/* 表单项 */
.form-item {
  margin-bottom: 30rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  font-size: 28rpx;
  color: #2c3e50;
  font-weight: 500;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
}

.required {
  color: #e74c3c;
  margin-right: 8rpx;
  font-weight: 600;
}

/* 输入框样式 */
.form-input {
  width: 100%;
  height: 88rpx;
  padding: 24rpx 20rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #2c3e50;
  background: #fff;
  transition: all 0.3s ease;
  box-sizing: border-box;
  line-height: 40rpx;
}

.form-input:focus {
  border-color: #667eea;
  background: #f8f9ff;
}

.form-input.error {
  border-color: #e74c3c;
  background: #fef5f5;
}

.form-input::placeholder {
  color: #adb5bd;
}

/* 文本域样式 */
.form-textarea {
  width: 100%;
  height: 160rpx;
  padding: 24rpx 20rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #2c3e50;
  background: #fff;
  transition: all 0.3s ease;
  resize: none;
  box-sizing: border-box;
  line-height: 40rpx;
}

.form-textarea:focus {
  border-color: #667eea;
  background: #f8f9ff;
}

.form-textarea.error {
  border-color: #e74c3c;
  background: #fef5f5;
}

.form-textarea::placeholder {
  color: #adb5bd;
}

/* 紧凑版文本域样式 */
.form-textarea-narrow {
  width: 100%;
  height: 120rpx;
  padding: 20rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #2c3e50;
  background: #fff;
  transition: all 0.3s ease;
  resize: none;
  box-sizing: border-box;
  line-height: 36rpx;
}

.form-textarea-narrow:focus {
  border-color: #667eea;
  background: #f8f9ff;
}

.form-textarea-narrow.error {
  border-color: #e74c3c;
  background: #fef5f5;
}

.form-textarea-narrow::placeholder {
  color: #adb5bd;
}

/* 错误提示 */
.error-text {
  font-size: 24rpx;
  color: #e74c3c;
  margin-top: 8rpx;
  padding-left: 4rpx;
}

/* 颜色选择网格 */
.color-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
  margin-top: 16rpx;
  max-width: 100%;
}

.color-item {
  width: 100%;
  height: 80rpx;
  max-width: 80rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.3s ease;
  border: 3rpx solid transparent;
  box-sizing: border-box;
}

.color-item.active {
  border-color: #2c3e50;
  transform: scale(1.05);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2);
}

.color-item text {
  font-size: 28rpx;
  font-weight: 600;
}



/* 预览容器 */
.preview-container {
  margin-top: 16rpx;
}

.preview-box {
  padding: 30rpx;
  border-radius: 20rpx;
  position: relative;
  overflow: hidden;
}

.preview-content {
  position: relative;
  z-index: 2;
}

.preview-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #fff;
  margin-bottom: 12rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

.preview-desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 20rpx;
  line-height: 1.4;
  text-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.2);
}

.preview-meta {
  display: flex;
  gap: 24rpx;
  flex-wrap: wrap;
}

.preview-location,
.preview-capacity {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  text-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.2);
}

.preview-location text,
.preview-capacity text {
  margin-right: 8rpx;
  font-size: 20rpx;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 20rpx;
  padding: 0 30rpx;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
}

/* ColorUI按钮在暗色模式下的适配 */
.action-buttons .cu-btn {
  flex: 1;
  margin: 0;
  min-width: 0;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.action-btn {
  flex: 1;
  padding: 24rpx 16rpx;
  border-radius: 16rpx;
  font-size: 26rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s ease;
  min-width: 0;
  white-space: nowrap;
}

.action-btn.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

.action-btn.primary:active {
  transform: scale(0.95);
  opacity: 0.9;
}

.action-btn.primary:disabled {
  background: #adb5bd;
  transform: none;
  opacity: 1;
}

.action-btn.secondary {
  background: #f8f9fa;
  color: #2c3e50;
  border: 2rpx solid #e9ecef;
}

.action-btn.secondary:active {
  transform: scale(0.95);
  background: #e9ecef;
}

.action-btn.secondary:disabled {
  background: #f8f9fa;
  color: #adb5bd;
  transform: none;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .color-grid {
    grid-template-columns: repeat(4, 1fr);
    gap: 16rpx;
  }
  
  .color-item {
    height: 70rpx;
    max-width: 70rpx;
  }
  
  .color-item.active {
    transform: scale(1.02);
  }
  
  .color-item text {
    font-size: 24rpx;
  }
  
  .action-buttons {
    gap: 12rpx;
  }
  
  .action-btn {
    padding: 20rpx 12rpx;
    font-size: 24rpx;
  }
  
  .preview-meta {
    flex-direction: column;
    gap: 12rpx;
  }
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .page-container {
    background: var(--darkBlack);
  }
  
  .card {
    background: var(--lightGray);
  }
  
  .section-title,
  .form-label,
  .capacity-name {
    color: var(--darkTitle);
  }
  
  .form-input,
  .form-textarea,
  .form-textarea-narrow {
    background: var(--darkGray);
    border-color: var(--darkDisable);
    color: var(--darkPrimaryText);
  }
  
  .form-input:focus,
  .form-textarea:focus,
  .form-textarea-narrow:focus {
    background: var(--darkGray);
    border-color: #667eea;
  }
  
  .form-input.error,
  .form-textarea.error,
  .form-textarea-narrow.error {
    background: #742a2a;
    border-color: #e74c3c;
  }
  
  .form-input::placeholder,
  .form-textarea::placeholder,
  .form-textarea-narrow::placeholder {
    color: var(--darkSecondaryText);
  }
  
  /* ColorUI按钮在暗色模式下的优化 */
  .action-buttons .cu-btn.bg-grey {
    background-color: var(--btnGray) !important;
    color: var(--darkPrimaryText) !important;
  }
  
  .action-buttons .cu-btn.bg-blue {
    background-color: #1e3a8a !important;
    color: #fff !important;
  }
  
  .action-buttons .cu-btn.bg-gradual-green {
    background-image: var(--darkGradualGreen) !important;
    color: #fff !important;
  }
  
  .action-btn.secondary {
    background: var(--btnGray);
    color: var(--darkPrimaryText);
    border-color: var(--darkDisable);
  }
  
  .action-btn.secondary:active {
    background: var(--darkGray);
  }
  
  .action-btn.secondary:disabled {
    background: var(--btnGray);
    color: var(--darkSecondaryText);
  }
}