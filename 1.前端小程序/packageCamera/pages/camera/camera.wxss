/* packageCamera/pages/camera/camera.wxss */

/* 相机容器 */
.camera-container {
  position: relative;
  width: 100vw;
  height: 100vh;
  background: #000;
  overflow: hidden;
}

/* 相机视图 */
.camera-view {
  width: 100%;
  height: 100%;
  position: relative;
}

/* 扫描框 */
.scan-frame {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 500rpx;
  height: 500rpx;
  transform: translate(-50%, -50%);
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 20rpx;
}

/* 扫描框四角 */
.scan-corner {
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #00ff00;
}

.scan-corner-tl {
  top: -6rpx;
  left: -6rpx;
  border-right: none;
  border-bottom: none;
  border-radius: 20rpx 0 0 0;
}

.scan-corner-tr {
  top: -6rpx;
  right: -6rpx;
  border-left: none;
  border-bottom: none;
  border-radius: 0 20rpx 0 0;
}

.scan-corner-bl {
  bottom: -6rpx;
  left: -6rpx;
  border-right: none;
  border-top: none;
  border-radius: 0 0 0 20rpx;
}

.scan-corner-br {
  bottom: -6rpx;
  right: -6rpx;
  border-left: none;
  border-top: none;
  border-radius: 0 0 20rpx 0;
}

/* 扫描线 */
.scan-line {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, transparent, #00ff00, transparent);
  animation: scan-move 2s linear infinite;
}

@keyframes scan-move {
  0% {
    transform: translateY(0);
    opacity: 0;
  }
  10% {
    opacity: 1;
  }
  90% {
    opacity: 1;
  }
  100% {
    transform: translateY(500rpx);
    opacity: 0;
  }
}

/* 拍照预览 */
.photo-preview {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
}

.photo-preview image {
  max-width: 90%;
  max-height: 90%;
  border-radius: 20rpx;
}

/* 顶部工具栏 */
.top-toolbar {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background: linear-gradient(to bottom, rgba(0, 0, 0, 0.6), transparent);
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  padding-top: calc(20rpx + env(safe-area-inset-top));
  z-index: 100;
}

.toolbar-left,
.toolbar-right {
  width: 120rpx;
  display: flex;
  justify-content: center;
}

.toolbar-center {
  flex: 1;
  display: flex;
  justify-content: center;
}

/* 模式切换 */
.mode-switch {
  display: flex;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 30rpx;
  padding: 8rpx;
}

.mode-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 20rpx 30rpx;
  border-radius: 22rpx;
  transition: all 0.3s;
  color: rgba(255, 255, 255, 0.7);
  font-size: 22rpx;
}

.mode-item.active {
  background: rgba(255, 255, 255, 0.2);
  color: white;
}

.mode-item .cuIcon-scan,
.mode-item .cuIcon-camerafill {
  font-size: 32rpx;
}

/* 工具按钮 */
.tool-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 15rpx;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.3);
  transition: all 0.3s;
}

.tool-btn:active {
  transform: scale(0.9);
  background: rgba(0, 0, 0, 0.5);
}

.tool-btn .cuIcon-back,
.tool-btn .cuIcon-light,
.tool-btn .cuIcon-lightfill,
.tool-btn .cuIcon-pic,
.tool-btn .cuIcon-refresh {
  font-size: 36rpx;
}

.tool-text {
  font-size: 20rpx;
  color: white;
}

/* 操作提示 */
.tips-container {
  position: absolute;
  top: 200rpx;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  z-index: 50;
}

.tips-text {
  background: rgba(0, 0, 0, 0.6);
  color: white;
  padding: 20rpx 40rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  backdrop-filter: blur(10rpx);
}

/* 底部工具栏 */
.bottom-toolbar {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 200rpx;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.8), transparent);
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  padding-bottom: calc(30rpx + env(safe-area-inset-bottom));
  z-index: 100;
}

/* 扫码状态 */
.scan-status {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.scan-indicator {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: rgba(0, 255, 0, 0.2);
  border: 4rpx solid #00ff00;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
}

.scan-indicator.processing {
  animation: pulse 1.5s ease-in-out infinite;
}

@keyframes pulse {
  0% {
    transform: scale(1);
    opacity: 1;
  }
  50% {
    transform: scale(1.1);
    opacity: 0.7;
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

.scan-text {
  color: white;
  font-size: 24rpx;
}

/* 拍照控制 */
.photo-controls {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 30rpx;
}

.photo-btn {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
  border: 6rpx solid white;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s;
}

.photo-btn:active {
  transform: scale(0.9);
}

.photo-btn-inner {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: white;
}

.photo-actions {
  display: flex;
  gap: 30rpx;
}

.photo-actions .cu-btn {
  width: 120rpx;
  height: 60rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
}

/* 处理状态遮罩 */
.processing-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 200;
}

.processing-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 30rpx;
  background: rgba(255, 255, 255, 0.1);
  padding: 60rpx 80rpx;
  border-radius: 30rpx;
  backdrop-filter: blur(10rpx);
}

.processing-text {
  color: white;
  font-size: 28rpx;
  text-align: center;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .scan-frame {
    width: 400rpx;
    height: 400rpx;
  }
  
  .mode-item {
    padding: 15rpx 20rpx;
    font-size: 20rpx;
  }
  
  .photo-btn {
    width: 100rpx;
    height: 100rpx;
  }
  
  .photo-btn-inner {
    width: 60rpx;
    height: 60rpx;
  }
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .tips-text {
    background: rgba(255, 255, 255, 0.1);
  }
  
  .processing-content {
    background: rgba(0, 0, 0, 0.8);
  }
}